<div class="row">
    <div class="col-md-12 col-xs-12">            
        {% include ':layout:menu_ventas.html.twig' %}          
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="col-md-12 col-xs-12 hidden" id="filterTag">
        <label>{{filterLabel}}</label>
        <select id="selectTags" style="width:100%">
            <option value="0">{{allFilter}}</option>
            {% for tag in etiquetas %}
                {# <a href="" id="{{tag.id}}">{{tag.nombre}}</a> #}
                <option value="{{tag.id}}">{{tag.nombre}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="clearfix"></div>
    <div id="addedTags" class="hidden"></div>
    <div class="clearfix"></div>
    <div id="addTag" class="hidden" style="margin-top:5px;">
        <div class="col-xs-12"><input maxlength="19" placeholder="{{add}}..." style="font-style:italic;border: 0px solid #FFF;" class="input-sm form-control" id="addTagForm" type="text" ></div>
    </div>
</div>