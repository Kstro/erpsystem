{# {% extends 'base.html.twig' %} #}

{% extends ':layout:layouterp.html.twig' %}


{% block title -%}<title>{{tituloClientePotencial}}</title>{% endblock %}

{% block customcss %}
    <link rel="stylesheet" href="{{ asset('Resources/customscss/salestage.css') }}">
    <link rel="stylesheet" href="{{ asset('Resources/slider/css/bootstrap-slider.min.css') }}">
    <link rel="stylesheet" href="{{ asset('Resources/customscss/timeline/timeline.css') }}">
    <style type="text/css">
        .errorform{
            border: 1px solid #F00 !important;
        }
    </style>
{% endblock %}
{% block navegacion %}
        {% include ':crmcuenta:opciones_cuenta.html.twig' %}
{% endblock %}


{% block descripcion %}
     <div class="col-md-5">
          <p class="robo" style="font-weight: 300; margin-bottom: 0px; font-size: 30px;">{{encabezadoClientePotencial | capitalize}}</p>
          <p class="robo" style="font-weight: 300; font-size: 14px; ">{{descripcionClientePotencial}}</p>
          {# <p id="cancelLabel" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{cancelLabel}}</p> #}
            <p id="removeLabel" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{removeLabel}}</p>
            <p id="convertLabel" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{convertLabel}}</p>
            <p id="cancelButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{cancelButtonText}}</p>
            <p id="confirmButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{confirmButtonText}}</p>
            <p id="alternateconfirmButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{alternateconfirmButtonText}}</p>
     </div>

{% endblock %}
{% block acciones %}
     <div class="col-md-7 text-right panel-body">
          {# <button id="btnBack" class="hidden btnBack btn btn-sm btn-default btn-flat">{{back}}</button> #}
          <button data-loading-text="Loading..." autocomplete="off" class="btnAddPage btn btn-sm btn-primary btn-flat">{{add}}</button>
          <a id="btnCancelTop" class="hidden btn btn-sm btn-default">{{cancel}}</a>
          <button id="btnSaveTop" class="hidden btn btn-sm btn-primary">{{save}}</button>
                            
          <button class="hidden btnDelete btn btn-sm btn-danger btn-flat">{{delete}}</button>
          <button class="hidden btnShow btn btn-sm btn-success btn-flat">{{show}}</button>
          <button class="hidden btnAction btn btn-sm btn-default btn-flat">{{actionClients}}</button>
     </div>
{% endblock acciones %}

{% block contenido %}
    <div class="row">
        {% include ':crmcuenta:cliente_potencial.html.twig' %}

        <div class="clearfix"></div>
        <div class="col-md-12 col-xs-12">
            <table id="clientePotencialList" class="mdl-data-table dataTable" width="100%" cellspacing="0" style="text-align:left;">
                  
                <thead>
                    <tr role="row">
                        <th style="text-align:left;width: 20px;" colspan="1" rowspan="1"><input class="chkItemAll" type="checkbox" name=""></th>
                        
                        <th aria-label="Name: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{nameClientePotencial}}</th>
                        <th aria-label="Company: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{companiaNombreClientePotencial}}</th>
                        {#<th aria-label="Email: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{emailClientePotencial}}</th>#}
                        <th aria-label="Phone: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{phoneClientePotencial}}</th>
                        <th aria-label="Industry: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{fuenteClientePotencial}}</th>
                        <th aria-label="Industry: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{interesClientePotencial}}</th>
                    </tr>
                </thead>      
             </table>
        </div>
    </div>

    
{% endblock %}
{% block js_extend %}
    
    <script type="text/javascript" src="{{ asset('Resources/validations/validation.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/persist/client/client-potential.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/animations/client/client-potential.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/persist/seguimiento/seguimiento.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/persist/seguimiento/add-comment.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/persist/seguimiento/tags.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/bootstrap/js/moment.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/mask/mask.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.firstPhoneTxt').mask('(000) 000-0000');
            /////Definición datatable
            $('#filterTag').removeClass('hidden');
            var valor = $('#selectTags').val();
            var table = $('#clientePotencialList').DataTable({
                dom:'ftp',
                "processing": false,
                "serverSide": true,
                "ajax": {
                    "url": '{{path('admin_clients_potencial_data')}}',
                    "type": 'GET'
                },
                "columns": [
                    { "data": "chk" },
                    { "data": "name" },
                    { "data": "account" },
                    {#{ "data": "email" },#}
                    { "data": "phone" },
                    { "data": "origin" },
                    { "data": "interes" }
                    // { "data": "industry" },

                    // { "data": "probability" },
                    // { "data": "state" }
                    // { "data": "actions" }
                ],
                "order":[1,'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": 0 }
                    
                ],
                "language": {
                    "info": "{{dtInfo}} _PAGE_ de _PAGES_",
                    "infoEmpty": "{{dtInfoEmpty}}",
                    "emptyTable": "{{dtEmptyTable}}",
                    "paginate": { 
                        "next": "{{dtNext}}",
                        "previous": "{{dtPrev}}"
                    },
                    "processing": "{{dtProcessing}}",
                    "search": "{{dtSearch}}",
                    "lengthMenu": "{{dtLengthMenu}} _MENU_ registros"
                }
            });
            //Buscar hasta que se presione enter
            $('#clientePotencialList_filter input').unbind();
            $('#clientePotencialList_filter input').bind('keyup', function(e) {
                if(e.keyCode == 13) {
                    table.search( this.value ).draw();
                    // $('.chkItem').prop({'checked': false});
                }
                else{
                    $('.btnAction').addClass('hidden');
                    $('.chkItem').prop({'checked': false});  
                }
                $('.chkItemAll').prop({'checked': false});
            });
            /////Fin definición datatable


            $(document).on('change', '#selectTags', function(event) {
                valor = $(this).val();
                var url = Routing.generate('admin_clients_potencial_data')+"?param1="+valor;
                table.ajax.url(url).load();
            });
            

            $('#dpbTitulo').select2();
            $('.dpbTipoPhone').select2();
            $('.dpbInteres').select2();
            $('.dpbEstado').select2();
            $('.dpbFuente').select2();
            $('.dpbCampania').select2();
            $('#selectTags').select2();            
            console.log('lknkdfjsvnlfdjvnfdkljvngbkljg nkjldfssdjkl nvkjlnkj nkjl');
            $('#contactos').select2({
                 ajax: {
                        url: function () {
                                return Routing.generate('busqueda_contacto_select_info')+'?param1='+$('#txtId2').val();
                            },  
                        dataType: 'json',
                        delay: 250,
                        data: function (params) {
                          return {
                            q: params.term, // search term
                            page: params.page
                          };
                        },
                        processResults: function (data, params) {
                                            var select2Data = $.map(data.data, function (obj) {
                                                obj.id = obj.id;
                                                obj.text = obj.nombre;

                                                return obj;
                                            });

                                            return {
                                                results: select2Data,
                                                {#pagination: {
                                                    more: (params.page * 30) < data.total_count
                                                }#}
                                            };
                                        },
                        cache: true
                      },
                      escapeMarkup: function (markup) { return markup; }, // let our custom formatter work
                      minimumInputLength: 1,
                      templateResult: formatRepo, // omitted for brevity, see the source of this page
                      // templateSelection: formatRepoSelection // omitted for brevity, see the source of this page
                    });
            
            
        });
        
        function formatRepo (data) {
                if(data.nombre){
                    // console.log('sdcsda');
                    var markup = "<div class='select2-result-repository clearfix'>" +
                                 "<div class='select2-result-repository__meta'>" +
                                 "<div class='select2-result-repository__title'>" + data.nombre+"</div>" +
                                 "</div></div>";
                } else {
                    var markup = "";
                }
                return markup;
            }

        function formatRepoSelection (data) {
            if(data.nombre){
                // console.log('a');
                return data.nombre;
            } else {
                return "Realice una búsqueda (Ctrl+g)"; 
            }    
        }
    </script>
     
{% endblock %}
