{# {% extends 'base.html.twig' %} #}

{% extends ':layout:layouterp.html.twig' %}


{% block title -%}<title>{{tituloProveedor}}</title>{% endblock %}

{% block customcss %}
    <link rel="stylesheet" href="{{ asset('Resources/customscss/salestage.css') }}">
    <link rel="stylesheet" href="{{ asset('Resources/slider/css/bootstrap-slider.min.css') }}">
    <style type="text/css">
        .errorform{
            border: 1px solid #F00 !important;
        }
    </style>
{% endblock %}
{% block descripcion %}
     <div class="col-md-5">
          <p class="robo" style="font-weight: 300; margin-bottom: 0px; font-size: 30px;">{{encabezadoProveedor}}</p>
          <p class="robo" style="font-weight: 300; font-size: 14px; ">{{descripcionProveedor}}</p>
          {# <p id="cancelLabel" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{cancelLabel}}</p> #}
        <p id="removeLabel" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{removeLabel}}</p>
          <p id="cancelButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{cancelButtonText}}</p>
          <p id="confirmButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{confirmButtonText}}</p>
          <p id="alternateconfirmButtonText" class="robo hidden" style="font-weight: 300; font-size: 14px; ">{{alternateconfirmButtonText}}</p>
     </div>

{% endblock %}
{% block acciones %}
     <div class="col-md-7 text-right panel-body">
          {# <button id="btnBack" class="hidden btnBack btn btn-sm btn-default btn-flat">{{back}}</button> #}
          <button data-loading-text="Loading..." autocomplete="off" class="btnAddPage btn btn-sm btn-primary btn-flat">{{add}}</button>
          <a id="btnCancelTop" class="hidden btn btn-sm btn-default">{{cancel}}</a>
          <button id="btnSaveTop" class="hidden btn btn-sm btn-primary">{{save}}</button>
                            
          <button class="hidden btnDelete btn btn-sm btn-danger btn-flat">{{delete}}</button>
          <button class="hidden btnShow btn btn-sm btn-success btn-flat">{{show}}</button>
          <button class="hidden btnAction btn btn-sm btn-default btn-flat">{{action}}</button>
     </div>
{% endblock acciones %}

{% block contenido %}
    <div class="row">
        {% include ':crmcuenta:provider.html.twig' %}

        <div class="clearfix"></div>
        <div class="col-md-12 col-xs-12">
            <table id="providersList" class="mdl-data-table dataTable" width="100%" cellspacing="0" style="text-align:left;">
                  
                <thead>
                    <tr role="row">
                        <th style="text-align:left;width: 20px;" colspan="1" rowspan="1"><input class="chkItemAll" type="checkbox" name=""></th>
                        <th aria-label="Name: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{nameProveedor}}</th>
                        
                        <th aria-label="Email: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{emailProveedor}}</th>
                        <th aria-label="Phone: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{phoneProveedor}}</th>
                        <th aria-label="Industry: activate to sort column ascending" colspan="1" rowspan="1" aria-controls="example" tabindex="0" class="sortRecords mdl-data-table__cell--non-numeric sorting">{{industriaProveedor}}</th>
                    </tr>
                </thead>      
             </table>
        </div>
    </div>

    
{% endblock %}
{% block js_extend %}
    
    <script type="text/javascript" src="{{ asset('Resources/validations/validation.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/persist/provider/provider.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Resources/animations/provider/provider.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            /////Definición datatable
            var table = $('#providersList').DataTable({
                dom:'ftp',
                "processing": false,
                "serverSide": true,
                "ajax": {
                    "url": '{{path('admin_providers_data')}}',
                    "type": 'GET'
                },
                "columns": [
                    { "data": "chk" },
                    { "data": "name" },
                    { "data": "email" },
                    { "data": "phone" },
                    { "data": "industry" }
                    // { "data": "probability" },
                    // { "data": "state" }
                    // { "data": "actions" }
                ],
                "order":[1,'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": 0 }
                    
                ],
                "language": {
                    "info": "{{dtInfo}} _PAGE_ de _PAGES_",
                    "infoEmpty": "{{dtInfoEmpty}}",
                    "emptyTable": "{{dtEmptyTable}}",
                    "paginate": { 
                        "next": "{{dtNext}}",
                        "previous": "{{dtPrev}}"
                    },
                    "processing": "{{dtProcessing}}",
                    "search": "{{dtSearch}}",
                    "lengthMenu": "{{dtLengthMenu}} _MENU_ registros"
                }
            });
            //Buscar hasta que se presione enter
            $('#providersList_filter input').unbind();
            $('#providersList_filter input').bind('keyup', function(e) {
                if(e.keyCode == 13) {
                    table.search( this.value ).draw();
                    $('.chkItemAll').prop({'checked': false});
                }
            });
            /////Fin definición datatable

            $('#dpbTitulo').select2();
            $('.dpbTipoPhone').select2();
            $('.dpbTipoPersona').select2();
            $('.dpbIndustria').select2();
        });
    </script>
     
{% endblock %}
