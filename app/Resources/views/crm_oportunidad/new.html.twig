 <div class="col-md-12 col-xs-12">
    <div id="pnAdd" style="display:none;">
        <div class="panel panel-default">
            <div class="panel-heading"><div class="hidden pnHeadingLabelAdd">{{pnHeadingLabelAdd}}</div><div class="hidden pnHeadingLabelEdit">{{pnHeadingLabelEdit}}</div></div>
            <div class="panel-body">
                <form id="frmOpportunities"  method="post">
                    <div class="col-md-5 col-xs-12">
                        <label>{{nameOportunidad}}</label>
                        <label class="hidden requiredFields">{{requiredFields}}</label>
                        <input id="txtId" type="hidden" name="txtId" class="input-sm form-control">
                        <input id="iteracion" type="hidden" name="iteracion" class="input-sm form-control">
                        <input id="txtTipoComment" type="hidden" name="txtTipoComment" class="input-sm form-control" value="5">
                        <input id="txtName" type="text" name="txtName" class="input-sm form-control validateInput">
                    </div>
                    <div class="col-md-3 col-xs-4">
                        <label>{{tipoCuentaOportunidad}}</label>
                        <select style="width:100%;" id="tipoCuenta" name="tipoCuenta" class="input-sm form-control validateSelectP" >
                            <option value="0" selected>{{selectOption}}</option>
                            {% for tipo in tiposCuenta %}
                                <option value={{tipo.id}}>{{tipo.nombre}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div id="divCuentaOportunidad" class="col-md-4 col-xs-8 hidden">
                        <label>{{cuentaOportunidad}}</label>
                        <select style="width:100%;" id="cuenta" name="cuenta" class="input-sm form-control "></select>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-5 col-xs-12" style="margin-top: 10px;">
                        <label>{{etapaOportunidad}}</label>
                        <select style="width:100%;" id="etapaVenta" name="etapaVenta" class="input-sm form-control validateSelectP ">
                            <option value="0" selected>{{selectOption}}</option>
                            {% for etapa in etapasVenta %}
                                <option value={{etapa.id}}>{{etapa.nombre}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3 col-xs-4" style="margin-top: 10px;">
                        <label>{{probabilidadOportunidad}}</label>
                        <div class="input-group">
                            <input id="txtProbability" type="text" name="txtProbability" class="input-sm form-control validateInput ">
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-8"style="margin-top: 10px;">
                        <label>{{fechaCierreOportunidad}}</label>
                        <div class='input-group date' id='datetimepicker1'>
                            <input id="txtFechaCierre" readonly type='text' class="form-control validateInput" name="txtFechaCierre"/>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-8 col-xs-12" style="margin-top: 10px;">
                        <label>{{descriptionOportunidad}}</label>
                        <textarea id="descripcion" name="descripcion" rows="4" style="width: 100%;" class="form-control"></textarea>
                    </div>
                    <div class="col-md-4 col-xs-8" style="margin-top: 10px;">
                        <label>{{fuenteOportunidad}}</label>
                        <select style="width:100%;" id="fuente" name="fuente" class="input-sm form-control validateSelectP ">
                            <option value="0" selected>{{selectOption}}</option>
                            {% for fuente in fuentes %}
                                <option value={{fuente.id}}>{{fuente.nombre}}</option>
                            {% endfor %}
                        </select>
                        <div id="divCampania" class="hidden" style="margin-top: 15px;">
                            <label>{{campaniaOportunidad}}</label>
                            <select style="width:100%;" id="campania" name="campania" class="input-sm form-control ">
                                <option value="0" selected>{{selectOption}}</option>
                                {% for campania in campanias %}
                                    <option value={{campania.id}}>{{campania.nombre}}</option>
                                {% endfor %}
                            </select>
                        </div>    
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-4 responsable" style="margin-top:20px;">
                        <label id="assignedUserOportunidad">{{assignedUserOportunidad}}</label>
                        <select id="persona-0" style="width:100%;" name="responsable[]" class="input-sm form-control validateSelectP dpbResponsable firstResponsable">
                            <option value="0" selected>{{selectOption}}</option>
                            {% for persona in personas %}
                                <option value={{persona.id}}>{{persona.persona}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-1 addUser" style="margin-top: 20px;">
                        <button id="plusUser" style="margin-top:25px;" class="btn btn-success"><i class="fa fa-plus"></i></button>
                    </div>
                    <div class="col-md-3 col-xs-12"style="margin-top: 20px;"></div>
                    <div class="col-md-4 checkbox text-right" style="margin-top:45px;">
                        <label><input  name="hayProductos" type="checkbox" value="">{{hayProductosOportunidad}}</label>
                    </div>
                    <div class="clearfix"></div>
                    <div id="productos" class="hidden" >
                        <div style="margin-top: 30px;">
                            <hr>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12 col-xs-12" style="margin-top: 10px; margin-bottom: 15px;">                
                            <button id="btnAddRow" class="btn btn-sm btn-default pull-right"><i class="fa fa-plus"></i> {{addRowOportunidad}}</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-sm-offset-1 col-sm-11">
                            <hr>
                        </div>
                        <div class="col-sm-offset-1 col-sm-8 text-center">
                            <label class="control-label">{{productoOportunidad}}</label>
                        </div>
                        <div class="col-sm-3 text-center">
                            <label class="control-label">{{cantidadOportunidad}}</label>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-sm-offset-1 col-sm-11">
                            <hr>
                        </div>
                        <div class="clearfix"></div>
                        <div class="removeRow col-sm-1">
                            <button id="deleteProd-0" class="btn removeProd btn-danger hidden"><i class="fa fa-remove"></i></button>
                        </div>
                        <div class="producto col-sm-8">
                            <div id="producto-0" >
                                <select id="sProducto-0" style="width:100%;" type="text" name="sProducto[]" class="sProducto firstProduct input-sm form-control ">
                                    {% for producto in productos %}
                                        <option value={{producto.id}}>{{producto.nombre}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="cantidad col-sm-3">
                            <input id="txtCantidad-0" type="text" name="cantidad[]" class="cant input-sm form-control text-right" value="1" min="1">                                                       
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div style="margin-top:40px;">
                        <hr>
                    </div>
                    <div class="col-md-12 pull-right text-right">
                        <button id="btnCancel" class="btn btn-sm btn-default">{{cancel}}</button>
                        <button id="btnSave" class="btn btn-sm btn-primary">{{save}}</button>
                    </div>
                </form>
            </div>
        </div>
        <div id="pnCotizacion" class="panel panel-default" style="display:none;">
            <div class="panel-heading">
                <div class="pnHeadingLabelCotizacion">
                    {{pnHeadingLabelCotizacion}}
                    <button id="btnAddQuote" class="btn btn-sm btn-default btnNewQuotation pull-right" data-toggle="tooltip" data-original-title="{{newQuote}}" rel="tooltip"><i class="fa fa-plus"></i></button>
                    <button id="btnDeleteQuote" class="btn btn-sm btn-danger btnDeleteQuotation pull-right hidden" data-toggle="tooltip" data-original-title="{{deleteOpQuote}}" rel="tooltip"><i class="fa fa-trash"></i></button>
                </div>                                        
            </div>
            <div class="panel-body">
                <div id="noQuotes" class="text-center hidden">{{noQuote}}</div>
                <div id="errorPorcTax" class="hidden">{{errorTaxQOp}}</div>
                <div id="divQuotes" class="hidden">
                    <table id="tablaQuotes" class="mdl-data-table table-hover no-margin" width="100%" cellspacing="0" style="text-align:left;">
                        <thead id ="theadQuotes">
                            <tr role="row">
                                <th style="width: 20px; padding-left: 8px;"><input type="checkbox" name="checktodosQ" onclick = "seleccionarTodoQ();"></th> 
                                <th style="text-align: center;" >{{correlativoQuote}}</th>
                                <th style="text-align: center;">{{dateCreatedQuote}}</th>
                                <th style="text-align: center;" >{{userQuote}}</th>
                                <th style="text-align: center;" >{{statusQuote}}</th>
                                <th style="text-align: center;">{{dateExpirationQuote}}</th>
                                <th style="text-align: center;">{{totalQuote}}</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyQuotes">

                        </tbody>
                    </table>
                </div>
                <div id="detalleQuote" class="hidden">
                    <form id="frmQuotes"  method="post">
                        <div class="col-md-12 text-right">
                            <a id="btnCancelQuote" class="btn btn-sm btn-default">{{cancel}}</a>
                            <button id="btnSaveQuote" class="btn btn-sm btn-primary">{{save}}</button>
                       </div>
                       <div class="col-md-4 col-xs-12" style="margin-top: 10px;">
                            <label>{{userQuote}}</label>
                            <label class="hidden requiredFields">{{requiredFields}}</label>
                            <input id="txtIdQuote" type="hidden" name="txtIdQuote" class="input-sm form-control">
                            <select id="assignedUserQuote" style="width:100%;" name="assignedUserQuote" class="input-sm form-control validateSelectQ dpbRespQute firstRespQuote">
                                <option value="0" selected>{{selectOption}}</option>
                                {% for persona in personas %}
                                    <option value={{persona.id}}>{{persona.persona}}</option>
                                {% endfor %}
                            </select>
                       </div>
                       <div class="col-md-4 col-xs-12" style="margin-top: 10px;">
                           <label>{{statusQuote}}</label>
                           <select id="statusQuote" style="width:100%;" name="statusQuote" class="input-sm form-control validateSelectQ statusQuote">
                                <option value="0" selected>{{selectOption}}</option>
                                {% for row in statusCot %}
                                    <option value={{row.id}}>{{row.nombre}}</option>
                                {% endfor %}
                            </select>
                       </div>
                       <div class="col-md-4 col-xs-12" style="margin-top: 10px;">
                           <label>{{dateExpirationQuote}}</label>
                            <div class='input-group date' id='datetimepicker2'>
                                <input id="txtDateExpirationQuote" readonly type='text' class="form-control validateInputQ" name="txtDateExpirationQuote"/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-8 col-xs-12" style="margin-top: 10px;">
                           <label>{{conditionssQuote}}</label>
                            <textarea id="conditionssQuote" name="conditionssQuote" rows="3" style="width: 100%;" class="form-control"></textarea>
                        </div>
                        <div class="col-md-4 col-xs-12 addRowItemQ text-right" style="margin-top:45px;">
                            <button id="btnAddRowQ" class="btn btn-sm btn-default pull-right"><i class="fa fa-plus"></i> {{addRowQuote}}</button>
                        </div>
                        <div class="clearfix"></div>
                        <div style="margin-top: 10px;">
                            <hr>
                        </div>
                        <div id="itemsQuotes" class="">
                           <div class="clearfix"></div>
                            <div class="col-sm-offset-1 col-sm-11">
                                <hr>
                            </div>
                            <div class="col-sm-offset-1 col-sm-1 text-center">
                                <label class="control-label" style="font-size: 12px;">{{cantidadItemQuote}}</label>
                            </div>
                            <div class="col-sm-4 text-center">
                                <label class="control-label" style="font-size: 12px;">{{itemQuote}}</label>
                            </div>
                            <div class="col-sm-2 text-center">
                                <label class="control-label" style="font-size: 12px;">{{itemPriceQuote}}</label>
                            </div>
                            <div class="col-sm-2 text-center">
                                <label class="control-label" style="font-size: 12px;">{{itemTaxQuote}}</label>
                            </div>
                            <div class="col-sm-2 text-center">
                                <label class="control-label" style="font-size: 12px;">{{itemTotalQuote}}</label>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-sm-offset-1 col-sm-11">
                                <hr>
                            </div>
                            <div class="clearfix"></div>
                            <div class="removeRowQ col-sm-1">
                                <button id="deleteItemQ-0" class="btn removeItemQ btn-danger hidden"><i class="fa fa-remove"></i></button>
                            </div>
                            <div class="cantItemQ col-sm-1">
                                <input id="txtCantItemQ-0" type="text" name="txtCantItemQ[]" class="cantQ input-sm form-control text-right validateInputQ" value="1" min="1">                                                       
                            </div>
                            <div class="itemsQ col-sm-4">
                                <div id="itemQ-0" >
                                    <select id="sItemQ-0" style="width:100%;" type="text" name="sItemQ[]" class="sItemQ firstItemQ input-sm form-control validateSelectQ">
                                        <option value="0" selected>{{selectOption}}</option>
                                        {% for producto in productos %}
                                            <option value={{producto.id}}>{{producto.nombre}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="priceItemQ col-sm-2">
                                <input id="txtPriceItemQ-0" type="text" name="txtPriceItemQ[]" class="priceQ input-sm form-control text-right validateInputOQ" value="0.00" min="0">                                                       
                            </div>
                            <div class="taxItemQ col-sm-2">
                                <input id="txtTaxItemQ-0" type="text" name="txtTaxItemQ[]" class="taxQ input-sm form-control text-right validateInputOQ" value="0.00" min="0">                                                       
                            </div>
                            <div class="totalItemQ col-sm-2" style="text-align: right;">
                                <div id="totalItemQ-0" style="margin-top: 10px;"><label class="totalQ control-label">0.00</label></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-sm-offset-10 col-sm-2"><hr></div>
                        <div class="clearfix"></div>
                        <div class="col-sm-offset-7 col-sm-3" style="text-align: right;">
                            <label class="control-label">{{subTotalQuoteOp}}</label>
                        </div>
                        <div class="col-sm-2" style="text-align: right; margin-bottom: 10px;">
                            <div id="subTotalQ-0">
                                <label class="subTotalVenta control-label">0.00</label>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-sm-offset-7 col-sm-3" style="text-align: right;">
                            <label class="control-label">{{taxQuoteOp}}</label>
                        </div>
                        <div class="col-sm-2" style="text-align: right; margin-bottom: 10px;">
                            <div id="totalTaxQ-0">
                                <label class="totalTaxVenta control-label">0.00</label>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-sm-offset-10 col-sm-2"><hr></div>
                        <div class="clearfix"></div>
                        <div class="col-sm-offset-7 col-sm-3" style="text-align: right;">
                            <label class="control-label">{{totalPrice}}</label>
                        </div>
                        <div class="col-sm-2" style="text-align: right; margin-bottom: 25px;">
                            <div id="total-0">
                                <label class="totalVenta control-label">0.00</label>
                            </div>
                        </div>
                        <div class="clearfix"></div>    
                    </form>
                </div>
            </div>                
        </div>
                        
        {% include ':crm_oportunidad:comments_section.html.twig' %}
    </div>
</div>