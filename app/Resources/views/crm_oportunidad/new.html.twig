 <div class="col-md-12 col-xs-12">
    <div id="pnAdd" class="panel panel-default" style="display:none;">
        <div class="panel-heading"><div class="hidden pnHeadingLabelAdd">{{pnHeadingLabelAdd}}</div><div class="hidden pnHeadingLabelEdit">{{pnHeadingLabelEdit}}</div></div>
        <div class="panel-body">
            <div class="col-md-5 col-xs-12">
                <label>{{nameOportunidad}}</label>
                <label class="hidden requiredFields">{{requiredFields}}</label>
                <input id="txtId" type="hidden" name="txtId" class="input-sm form-control">
                <input id="txtName" type="text" name="txtName" class="input-sm form-control validateInput">
            </div>
            <div class="col-md-3 col-xs-4">
                <label>{{tipoCuentaOportunidad}}</label>
                <select style="width:100%;" id="tipoCuenta" name="tipoCuenta" class="input-sm form-control validateSelect dpbState dpbStateFirst">
                    <option value="0" selected>{{selectOption}}</option>
                    {% for tipo in tiposCuenta %}
                        <option value={{tipo.id}}>{{tipo.nombre}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-4 col-xs-8">
                <label>{{cuentaOportunidad}}</label>
                <select style="width:100%;" id="cuenta" name="cuenta" class="input-sm form-control validateSelect dpbState dpbStateFirst">
                    
                </select>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-5 col-xs-12" style="margin-top: 10px;">
                <label>{{etapaOportunidad}}</label>
                <select style="width:100%;" id="etapaVenta" name="etapaVenta" class="input-sm form-control validateSelect dpbState dpbStateFirst">
                    <option value="0" selected>{{selectOption}}</option>
                    {% for etapa in etapasVenta %}
                        <option value={{etapa.id}}>{{etapa.nombre}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3 col-xs-4" style="margin-top: 10px;">
                <label>{{probabilidadOportunidad}}</label>
                <label class="hidden requiredFields">{{requiredFields}}</label>
                <div class="input-group">
                    <input id="txtProbability" type="text" name="txtProbability" class="input-sm form-control validateInput">
                    <span class="input-group-addon">%</span>
                </div>
            </div>
            <div class="col-md-4 col-xs-8"style="margin-top: 10px;">
                <label>{{fuenteOportunidad}}</label>
                <select style="width:100%;" id="fuente" name="fuente" class="input-sm form-control validateSelect ">
                    <option value="0" selected>{{selectOption}}</option>
                    {% for fuente in fuentes %}
                        <option value={{fuente.id}}>{{fuente.nombre}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-8 col-xs-12" style="margin-top: 10px;">
                <label>{{descriptionOportunidad}}</label>
                <label class="hidden requiredFields">{{requiredFields}}</label>
                <textarea id="descripcion" name="descripcion" rows="2" style="width: 100%;" class="form-control"></textarea>
            </div>
            <div id="divCampania" class="col-md-4 col-xs-8 hidden" style="margin-top: 10px;">
                <label>{{campaniaOportunidad}}</label>
                <select style="width:100%;" id="campania" name="campania" class="input-sm form-control validateSelect ">
                    <option value="0" selected>{{selectOption}}</option>
                    {% for campania in campanias %}
                        <option value={{campania.id}}>{{campania.nombre}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-4 responsable" style="margin-top:20px;">
                <label>{{assignedUserOportunidad}}</label>
                <select style="width:100%;" name="responsable[]" class="input-sm form-control validateSelect dpbResponsable firstResponsable">
                    <option value="0" selected>{{selectOption}}</option>
                    {% for persona in personas %}
                        <option value={{persona.id}}>{{persona.persona}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-1 addUser" style="margin-top: 20px;">
                <button id="plusUser" style="margin-top:25px;" class="btn btn-success"><i class="fa fa-plus"></i></button>
            </div>
            <div class="col-md-3 col-xs-12"style="margin-top: 20px;">
                <label>{{fechaCierreOportunidad}}</label>
                <div class='input-group date' id='datetimepicker1'>
                    <input id="txtFechaCierre" readonly type='text' class="form-control validateInput" name="txtFechaCierre"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-md-4 checkbox text-right" style="margin-top:45px;">
                <label><input type="checkbox" value="">{{hayProductosOportunidad}}</label>
            </div>
            <div class="clearfix"></div>
            <div id="productos" class="hidden">
                <div style="margin-top: 30px;">
                    <hr>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-6 pull-right text-right" style="margin-top:10px;">
                    <button id="btnAddRow" class="btn btn-sm btn-default">{{addRowOportunidad}}</button>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-6 pull-right text-right" style="margin-top:20px;">
                <button id="btnCancel" class="btn btn-sm btn-default">{{cancel}}</button>
                <button id="btnSave" class="btn btn-sm btn-primary">{{save}}</button>
            </div>
        </div>
    </div>
</div>