{% extends ':layout:layouterp.html.twig' %}

{% block customcss %}
	<link rel="stylesheet" href="{{ asset('Resources/customscss/salestage.css') }}">
{% endblock %}
{% block descripcion %}
	 <div class="col-md-5">
		  <p class="robo" style="font-weight: 300; margin-bottom: 0px; font-size: 30px;">Sales stage list</p>
		  <p class="robo" style="font-weight: 300; font-size: 14px; ">Add, modify or delete sales stages.</p>
	 </div>

{% endblock %}
{% block acciones %}
	 <div class="col-md-7 text-right panel-body">
		  <button data-loading-text="Loading..." autocomplete="off" class="btnAdd btn btn-sm btn-primary btn-flat">Add</button>
		  <button class="btnDelete btn btn-sm btn-danger btn-flat">Delete</button>
		  <button class="btnShow btn btn-sm btn-success btn-flat">Show</button>
		  <button class="btnAction btn btn-sm btn-default btn-flat">Action</button>
	 </div>
{% endblock acciones %}

{% block navegacion %}
	<a href="/sepes/app_dev.php/admin/reporte/pacientes/reporte" class="leftnava"><li class="leftnav left ">Users management<span class="pull-right right"><i class=""></i></span></li></a>
	<a href="/sepes/app_dev.php/admin/reporte/ingresoemergencia" class="leftnava"><li class="leftnav left active"> management<span class="pull-right right"><i class="fa fa-arrow-right"></i></span></li></a>
		  
{% endblock %}

{% block contenido %}
	<div class="row">
		<div class="col-md-12 col-xs-12">
			<div id="pnAdd" class="panel panel-default" style="display:none;">
    				<div class="panel-heading">Add</div>
    				<div class="panel-body">
    					<div class="col-md-4">
						<label>Name</label>
						<input id="txtName" type="text" name="" class="input-sm form-control validateInput">
					</div>
					<div class="col-md-4">
						<label>Probability</label>
						<input id="txtProbability" type="text" name="" class="input-sm form-control validateInput">
					</div>
					<div class="col-md-4">
						<label>State</label>
						<input id="txtState" type="" name="" class="input-sm form-control validateInput">
					</div>
					<div class="clearfix"></div>
					<div class="col-md-4 pull-right text-right" style="margin-top:20px;">
						<button id="btnSave" class="btn btn-sm btn-primary">Save</button>
						<button id="btnCancel" class="btn btn-sm btn-default">Cancel</button>
					</div>
    				</div>
    				{# <div class="panel-footer">Panel Footer</div> #}
  			</div>
		</div>
		<div class="clearfix"></div>
		<div class="col-md-12 col-xs-12">
			<table id="saleStageList" class="mdl-data-table" width="100%" cellspacing="0">
				  <thead>
						<tr>
							 {# <th>Id</th> #}
							 <th>Name</th>
							 <th>Probability</th>
							 <th>State</th>
							 <th>Actions</th>
						</tr>
				  </thead>
				  
			 </table>
		</div>
	</div>
	 {# <ul>
		  <li>
				<a href="{{ path('admin_ctletapaventa_new') }}">Create a new entry</a>
		  </li>
	 </ul> #}
{% endblock %}

{% block js_extend %}
	<script type="text/javascript" src="{{ asset('Resources/validations/validation.js') }}"></script>
	<script type="text/javascript" src="{{ asset('Resources/persist/salestage/salestage.js') }}"></script>
		<script type="text/javascript">
		$(document).ready(function() {
		  	/////Definición datatable
			var table = $('#saleStageList').DataTable({
				dom:'ftp',
				"processing": false,
				"serverSide": true,
				"ajax": {
					"url": '{{path('admin_etapa_ventas_data')}}',
					"type": 'GET'
				},
				"columns": [
					{ "data": "Name" },
					{ "data": "Probability" },
					{ "data": "State" },
					{ "data": "Actions" }
				],
				"order":[0,'asc'],
				"columnDefs": [
					{ "orderable": false, "targets": 3 }
				]
			});
			/////Fin definición datatable
		});
	</script>
	 
	{% endblock %}